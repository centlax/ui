{
	"git": {
		"commitMessage": "chore(release): v${version}",
		"tagName": "v${version}"
	},
	"npm": {
		"publish": false
	},
	"workspaces": ["package"],
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"web": true
	},

	"release-it": {
		"git": {
			"requireCleanWorkingDir": false
		}
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits"
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog",
			"ignoreRecommendedBump": true
		}
	}
}
