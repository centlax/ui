{
	"name": "@ui/root",
	"private": true,
	"version": "0.1.1-0",
	"packageManager": "pnpm@9.5.0",
	"scripts": {
		"dev": "pnpm --filter @centlax/ui dev",
		"ui": "pnpm --filter @centlax/ui --",
		"docs": "pnpm --filter @ui/docs --",
		"git": "bash .scripts/git/commit.sh",
		"lint": "prettier --check . && eslint .",
		"fmt": "prettier --check --write . ",
		"cpx": "cpx README.md ./package/dist",
		"release": "release-it",
		"play": "pnpm --filter @ui/play --",
		"turbo:build": "turbo run build",
		"turbo:dev": "turbo run dev",
		"turbo:lint": "turbo run lint",
		"turbo:format": "prettier --write ."
	},
	"devDependencies": {
		"@huntabyte/eslint-config": "^0.3.2",
		"@release-it/bumper": "^6.0.1",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/eslint": "^9.6.0",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"release-it": "^17.6.0",
		"turbo": "^2.0.9",
		"typescript-eslint": "8.0.0-alpha.54"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	},
	"type": "module"
}
