{
  "git": {
    "commitMessage": "chore(release): ${version}",
    "git-checks": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "web": true
  },
  "hooks": {
    "before:init": [
      "pnpm lint "
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "ignoreRecommendedBump": true
    }
  }
}